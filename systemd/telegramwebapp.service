[Unit]
Description=telegramWEBAPP FastAPI Service
After=network.target

[Service]
Type=simple
User=
WorkingDirectory=/opt/telegramWEBAPP/app
EnvironmentFile=/opt/telegramWEBAPP/.env
ExecStart=/usr/bin/python3 -m uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
